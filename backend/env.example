# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/swagat_odisha

# Cloudinary Configuration (for file storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# File Upload Configuration
MAX_FILE_SIZE=52428800

# File Storage Configuration
# All files are stored in Cloudinary
# Maximum file size for migration (files larger than this will be skipped)
MIGRATION_MAX_FILE_SIZE=52428800  # 50MB in bytes

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (for notifications and contact form)
# Resend Configuration (Primary - Easiest Setup, Free Tier: 3,000 emails/month)
# No subscription needed, just API key. Get free key from https://resend.com
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=onboarding@resend.dev
CONTACT_EMAIL=contact@swagatodisha.com

# Mailgun Configuration (Optional - Alternative to Resend)
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=your_mailgun_domain.com
# MAILGUN_FROM_EMAIL=noreply@your_mailgun_domain.com

# SMTP Configuration (Fallback - for Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# SendGrid Configuration (Optional - alternative to Mailgun)
# FROM_EMAIL=contact@swagatodisha.com  # Must be verified in SendGrid dashboard
# SENDGRID_API_KEY=SG.your-sendgrid-api-key

CONTACT_UPLOAD_DIR=/tmp/contact-documents

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google reCAPTCHA v3 Configuration (for spam protection)
# Get your keys from: https://www.google.com/recaptcha/admin/create
# Site key goes in frontend .env file as REACT_APP_RECAPTCHA_SITE_KEY
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here